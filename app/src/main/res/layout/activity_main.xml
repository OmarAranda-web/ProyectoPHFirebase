<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#90CAF9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENSOR DE PH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar el nivel de PH del agua"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/buttonVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Ver" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIVELES DE PH"
        android:textSize="20dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrucciones: De acuerdo a la imagen de a bajo, los niveles de ph iran de lo mas acido a lo mas base, por lo que dependido del numero, la sustancia tendra una consistencia mas basica o acida."
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/ph"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:srcCompat="@drawable/ph1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESCRIPCION:"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/txtNivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFD8DC"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PH:"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/lblMostrar"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="center"
        android:textSize="140dp"
        android:background="#CFD8DC"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        />

</LinearLayout>